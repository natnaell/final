<h1>Sign In</h1>

<%= form_tag "/sessions" do  %>

  <p><%= label_tag :username %><%= text_field_tag :username, '', autofocus: true, size: 40, required: true %></p>
  <p><%= label_tag :password %><%= password_field_tag :password, '', size: 40, required: true %></p>
  <p><%= submit_tag "Let Me In!" %></p>

<% end %>
